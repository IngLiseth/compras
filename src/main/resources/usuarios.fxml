<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.empresa.compras.frontend.UsuariosController">

    <!-- Formulario arriba -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUsername" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="ContraseÃ±a:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Rol:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbRol" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Registrar" onAction="#crearUsuario"/>
                <Button text="Actualizar" onAction="#actualizarUsuario"/>
                <Button text="Eliminar" onAction="#eliminarUsuario"/>
                <Button text="Limpiar" onAction="#limpiarCampos"/>
                <Button text="AtrÃ¡s" onAction="#volverAlMenu"/> <!-- ðŸ‘ˆ nuevo -->
            </HBox>

            <Label fx:id="lblMensaje" style="-fx-text-fill: green;"/>
        </VBox>
    </top>

    <!-- Tabla de usuarios abajo -->
    <center>
        <TableView fx:id="tablaUsuarios">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colUsername" text="Username" prefWidth="150"/>
                <TableColumn fx:id="colActivo" text="Activo" prefWidth="80"/>
                <TableColumn fx:id="colRol" text="Rol" prefWidth="120"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
